<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/week_day_1"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_2"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_3"
        app:layout_constraintStart_toEndOf="@+id/week_day_1"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_3"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_4"
        app:layout_constraintStart_toEndOf="@+id/week_day_2"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_4"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_5"
        app:layout_constraintStart_toEndOf="@+id/week_day_3"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_5"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_6"
        app:layout_constraintStart_toEndOf="@+id/week_day_4"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_6"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/week_day_7"
        app:layout_constraintStart_toEndOf="@+id/week_day_5"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/week_day_7"
        layout="@layout/item_calendar_cell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/week_day_6"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>